<idea-plugin>
    <id>com.kinnerapriyap.fluffiness</id>
    <name>Fluffiness</name>
    <vendor>kinnerapriyap</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.kinnerapriyap.fluffiness.services.MyApplicationService"/>
        <projectService serviceImplementation="com.kinnerapriyap.fluffiness.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.kinnerapriyap.fluffiness.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <actions>
        <group id="fluffiness.TopMenu"
               text="_Fluffiness"
               description="Fluffiness menu item">
            <add-to-group group-id="ViewMenu" anchor="last"/>
            <action id="LogAction"
                    class="com.kinnerapriyap.fluffiness.actions.LogAction"
                    text="_LogAction"
                    description="LogAction"/>
        </group>
    </actions>
</idea-plugin>
